@{
    ViewBag.Title = "UploadFile";
}

<!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Translated Strings</h1>
                    </div>
                </div>

            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li> <a href="@Url.Action("Index","Home")" class="btn btn-primary btn-flat m-b-30 m-t-30"><i class="fa fa-home"></i> Go Home</a> </li>
                            <li><a href="@Url.Action("Download","Home",new { filePath = @ViewBag.Link })" class="btn btn-success"><i class="fa fa-download"></i> Download</a></li>
                        </ol>
                        
                       
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="alert  alert-success alert-dismissible fade show" role="alert">
                <span class="badge badge-pill badge-success">Success</span> You can download your translated string.xml file.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Data Table</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Attribute</th>
                                            <th>Old Value</th>
                                            <th>New Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int i = 1;}
                                        @foreach (var item in Model)

                                        {
                                            <tr>
                                                <td> @i</td>
                                                <td> @item.attr</td>
                                                <td> @item.old_value</td>
                                                <td> @item.new_value</td>
                                            </tr>
                                            i++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- .animated -->
        </div><!-- .content -->


    </div><!-- /#right-panel -->
<!-- Right Panel -->